
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_card"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp">
    <TextView android:id="@+id/tvTitle" android:textStyle="bold" android:textSize="16sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvSub" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="@color/tm_subtext"/>
</LinearLayout>
